@using System.Data.Entity.Infrastructure
@using MVC.Areas.ModulStudentskaSluzba.Models
@using MVC.Areas.ModulStudentskaSluzba.Models.TokStudija
@model List<MVC.Areas.ModulStudentskaSluzba.Models.TokStudija.UpisaneGodineVM>


<table class="table table-striped">
    <thead>
    <tr>
        <th>Godina studija</th>
        <th>Zimski ovjera</th>
        <th>Ljetni ovjera</th>
        <th>Uplaćeno</th>
        <th>Akcija</th>
    </tr>
    </thead>
    <tbody>
        @foreach (UpisaneGodineVM x in Model)
        {
            <tr>
                <td>@x.GodinaStudija</td>
                <td>@x.Datum2_ZimskiOvjera</td>
                <td>@x.Datum4_LjetniOvjera</td>
                <td>@x.Uplaceno</td>
                <td>@Html.ActionLink("Detalji", "Index", "TokStudija", new {studentId = x.StudentId, upisGodineId = x.Id}, new{})</td>
            </tr>
        }
    </tbody>
</table>