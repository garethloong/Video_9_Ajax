@using MVC.Areas.ModulAdministracija.Models
@using MVC.Models
@model MVC.Areas.ModulAdministracija.Models.FakultetIndexVM


<h2>Upravljanje fakultetima</h2>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Naziv fakulteta</th>
            <th>Broj smjerova</th>
            <th>Broj studenata</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
    @foreach (FakultetIndexVM.FakultetInfo x in Model.Fakulteti)
    {
        <tr>
            <td>@x.FakultetNaziv</td>
            <td>@x.BrojSmjerova</td>
            <td>@x.BrojStudenata</td>
            <td>
                @Html.ActionLink("Obriši", "Obrisi", new { fakultetId = x.Id }, new { @class = "btn btn-danger btn-sm" })
                @Html.ActionLink("Uredi", "Uredi", new { fakultetId = x.Id }, new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Smjerovi", "Index", "Smjer", new { fakultetId = x.Id }, new { @class = "btn btn-warning btn-sm" })
            </td>
        </tr>
    }
    </tbody>
</table>

<div>
    @Html.ActionLink("Dodaj novi", "Dodaj", new { }, new { @class = "btn btn-success btn-sm" })
</div>
