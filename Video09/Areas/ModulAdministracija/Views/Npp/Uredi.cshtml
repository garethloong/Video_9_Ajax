@model MVC.Areas.ModulAdministracija.Models.NppUrediVM
<h2>Upravljanje smjerovima</h2>

<div class="form-group">
    <label class="control-label">Fakultet</label>
    <input type="text" class="form-control" value="@Model.FakultetNaziv" disabled />
</div>

<div class="form-group">
    <label class="control-label">Smjer</label>
    <input type="text" class="form-control" value="@Model.SmjerNaziv" disabled/>
</div>

@using (Html.BeginForm("Snimi", "Npp"))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.SmjerId)

    <div class="form-group">
        <label>Naziv</label>
        <div>
           @Html.TextBoxFor(model => model.Naziv, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        <label>Akademska godina</label>
        <div>
            @Html.DropDownListFor(model => model.AkademskaGodinaId, Model.AkademskaGodinaStavke, new { @class = "form-control" })
        </div>
    </div>   
    

    <input type="submit" value="Snimi" class="btn btn-danger" />
}

